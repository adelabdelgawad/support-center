# =============================================================================
# Frontend (Next.js) Configuration for Local Development
# =============================================================================
# Copy this file to .env.local and update with your actual values
# For Docker deployment, use docker/env/.env.frontend instead


# =============================================================================
# BACKEND API CONFIGURATION
# =============================================================================
# API_URL: Server-side URL for Next.js API routes to call backend
# NEXT_PUBLIC_API_BASE_PATH: API version prefix
API_URL=http://localhost:8000
NEXT_PUBLIC_API_BASE_PATH=/api/v1

# =============================================================================
# SIGNALR CONFIGURATION (Real-time communication)
# =============================================================================
# SignalR hub URL for real-time updates
# Uses HTTP/HTTPS for negotiation - SignalR handles WebSocket upgrade internally
NEXT_PUBLIC_SIGNALR_URL=http://localhost:5000/hubs


# =============================================================================
# SESSION CONFIGURATION (server-side)
# =============================================================================
# Generate using: openssl rand -hex 32
SESSION_SECRET=CHANGE_ME_USE_OPENSSL_RAND_HEX_32


# =============================================================================
# JWT CONFIGURATION
# =============================================================================
# CRITICAL: Must match backend SECURITY_JWT_SECRET_KEY for token verification
JWT_SECRET=CHANGE_ME_MUST_MATCH_BACKEND_JWT_SECRET

# Token expiration (should match backend settings)
ACCESS_TOKEN_EXPIRE_DAYS=30


# =============================================================================
# CORS / DEV ORIGINS (optional)
# =============================================================================
# Comma-separated list of allowed origins for development
# Example: localhost,192.168.1.100,myserver.local
ALLOWED_DEV_ORIGINS=localhost
